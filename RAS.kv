#:kivy 1.0.9

<YesNoDialog>:
    RelativeLayout:
        pos_hint: {'x': 0.5, 'y':0.5}
        Label:
            size_hint: 0.4, 0.3
            pos_hint: {'x': -0.2, 'y': 0}
            text: root.message
        Button:
            size_hint: 0.4, 0.4
            pos_hint: {'x': -0.4, 'y': -0.5}
            text: 'Yes'
            on_release: root.yes()
        Button:
            size_hint: 0.4, 0.4
            pos_hint: {'x': 0, 'y': -0.5}
            text: 'Cancel'
            on_release: root.cancel()

<SaveDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: root.folder
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: 0.1
            multiline: False

        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)
            Button:
                text: "Cancel"
                on_release: root.cancel()

<RASDriver>:
    orientation: 'horizontal'

    BoxLayout:
        size_hint_x: 0.5
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.6
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Start'
                Label:
                    text: str(round(root.start_pos[0], 2))
                Label:
                    text: str(round(root.start_pos[1], 2))
                Label:
                    text: str(round(root.start_pos[2], 2))
                Button:
                    id: button_set_start
                    text: 'Set Start'
                    on_release: root.start_pos = root.current_pos
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Current'
                Label:
                    text: str(round(root.current_pos[0], 2))
                Label:
                    text: str(round(root.current_pos[1], 2))
                Label:
                    text: str(round(root.current_pos[2], 2))
                Label:
                    text:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Goal'
                Label:
                    text: str(round(root.goal_pos[0], 2))
                Label:
                    text: str(round(root.goal_pos[1], 2))
                Label:
                    text: str(round(root.goal_pos[2], 2))
                Button:
                    id: button_set_goal
                    text: 'Set Goal'
                    on_release: root.goal_pos = root.current_pos
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Go to'
                TextInput:
                    id: input_pos_x
                    halign: 'center'
                    valign: 'center'
                    multiline: False
                TextInput:
                    id: input_pos_y
                    halign: 'center'
                    valign: 'center'
                    multiline: False
                TextInput:
                    id: input_pos_z
                    halign: 'center'
                    valign: 'center'
                    multiline: False
                Button:
                    id: button_go
                    text: 'Go to'
                    on_release: root.go(input_pos_x.text, input_pos_y.text, input_pos_z.text)
        BoxLayout:
            size_hint_y: 0.3
            padding: [0, 30, 0, 0]
            orientation: 'horizontal'
            Button:
                id: button_initialize
                text: 'Initialize'
                on_release: root.initialize()
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: str(root.current_temperature) + ' Â°C'
        BoxLayout:
            size_hint_y: 0.12
            orientation: 'horizontal'
            Label:
                text: 'Integration [s]'
            TextInput:
                id: input_integration
                text: str(root.integration)
                halign: 'center'
                valign: 'center'
                hint_text:'30'
                pos_hint: {'center_y': 0.5}
                multiline: False
                on_text: root.set_integration(input_integration.text)
        BoxLayout:
            size_hint_y: 0.12
            orientation: 'horizontal'
            Label:
                text: 'Accumulation'
            TextInput:
                id: input_accumulation
                text: str(root.accumulation)
                halign: 'center'
                valign: 'center'
                hint_text:'1'
                pos_hint: {'center_y': 0.5}
                multiline: False
                on_text: root.set_accumulation(input_accumulation.text)
        BoxLayout:
            size_hint_y: 0.12
            orientation: 'horizontal'
            ToggleButton:
                id: toggle_interval
                text: 'Scan interval [um]'
                on_release: root.apply_interval()
                state: 'down'
            TextInput:
                id: input_interval
                text: str(root.interval)
                halign: 'center'
                valign: 'center'
                hint_text:'1'
                pos_hint: {'center_y': 0.5}
                multiline: False
                on_text: root.set_interval(input_interval.text)
        BoxLayout:
            size_hint_y: 0.12
            orientation: 'horizontal'
            ToggleButton:
                id: toggle_num_pos
                text: 'Number of positions'
                on_release: root.apply_num_pos()
                state: 'normal'
            TextInput:
                id: input_num_pos
                text: str(root.num_pos)
                halign: 'center'
                valign: 'center'
                hint_text:'1'
                pos_hint: {'center_y': 0.5}
                multiline: False
                on_text: root.set_num_pos(input_num_pos.text)
        Button:
            id: button_acquire
            text: 'Acquire'
            size_hint_y: 0.2
            on_release: root.start_acquire()
        Button:
            id: button_scan
            text: 'Start Scan'
            size_hint_y: 0.2
            on_release: root.start_scan()
        Button:
            id: button_save
            text: 'Save'
            size_hint_y: 0.2
            on_release: root.popup_save.open()

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: graph_line
            size_hint: 1, 1

        BoxLayout:
            id: graph_contour
            size_hint: 1, 1

        ProgressBar:
            id: progress_acquire
            value: root.progress_acquire_value
            min: 0
            max: 1
            size_hint_y: 0.05

        ProgressBar:
            id: progress_scan
            value: root.progress_scan_value
            min: 0
            max: 1
            size_hint_y: 0.05

        Label:
            text: root.msg
            size_hint_y: 0.1
